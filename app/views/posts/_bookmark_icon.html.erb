<% if is_bookmarked.present? %>
  <%= link_to "Bookmarked", bookmark_path(is_bookmarked), data: { turbo_method: "delete", remote: true },
    class: "core-sprite bookmarked hide-text" %>
<% else %>
  <%= link_to "Bookmark", post_bookmarks_path(post), data: { turbo_method: "post", remote: true },
    remote: true, class: "core-sprite bookmark hide-text" %>
<% end %>
