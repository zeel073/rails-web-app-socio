<% if user_signed_in? %>
  <p style="color: green"><%= notice %></p>

  <h1>Posts</h1>

  <div id="posts">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post %>
      </p>
    <% end %>
  </div>

  <%= link_to "New post", new_post_path %>
<% else %>
  <h1>Please log_in or sign_in to see all the posts</h1>
<% end %>
